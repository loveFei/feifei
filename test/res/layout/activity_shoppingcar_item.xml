<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:background="#ffffff" >

    <CheckBox
        android:id="@+id/checkBox_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        style="@style/CustomCheckboxTheme"
        android:layout_marginTop="29dp" />
    
    <ImageView 
        android:id="@+id/thumb"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_launcher"/>

    <TextView
        android:id="@+id/textView_name"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:text="name:" />
    <TextView
        android:id="@+id/textView_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="40dp"
        android:textColor="#000000"
        android:text="price:" />
    
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="65dp"
        android:textColor="#000000"
        android:text="数量" />
    
    <TextView
        android:id="@+id/textView_num_subtract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="65dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:text="—" />
    <TextView
        android:id="@+id/textView_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textView_num_subtract"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"
        android:layout_marginTop="65dp"
        android:text="1" />
    <TextView
        android:id="@+id/textView_num_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textView_num"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="65dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:text="+" />
	
</RelativeLayout>