<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >
    
    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:background="#ffffff" >
    	
        <TextView
        	android:id="@+id/textView_back"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textColor="#000000"
        	android:textSize="20sp"
        	android:paddingTop="3dp"
        	android:text="返回" />
        
        <TextView
        	android:id="@+id/textView_goodsinfo"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_centerHorizontal="true"
        	android:textColor="#000000"
        	android:textSize="20sp"
        	android:paddingTop="3dp"
        	android:text="商品详情" />
        
        <TextView
        	android:id="@+id/textView_share"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_centerHorizontal="true"
        	android:layout_alignParentRight="true"
        	android:textColor="#000000"
        	android:textSize="20sp"
        	android:paddingTop="3dp"
        	android:text="分享" />
        
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_below="@+id/relativeLayout1"
    	android:background="#ffffff" >
    	
        <ImageView
	        android:id="@+id/imageView_goods"
	        android:layout_width="wrap_content"
	        android:layout_height="200dp"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/relativeLayout1"
	        android:src="@drawable/vp2" />
        
    </RelativeLayout>
    

    <TextView
        android:id="@+id/textView_goods_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout2"
        android:layout_centerHorizontal="true"
        android:lines="2"
        android:textColor="#000000"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:ems="12"
        android:paddingTop="3dp" />

    <TextView
        android:id="@+id/textView_market_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView_goods_name"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="市场价：" />

    <TextView
        android:id="@+id/textView_shop_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_market_price"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginTop="3dp"
        android:layout_alignLeft="@+id/textView_market_price"
        android:text="本店价格" />
    <LinearLayout 
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true" >

        <Button
            android:id="@+id/button_look"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#000000"
            android:text="关注" />
        <Button
            android:id="@+id/button_shopping_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#000000"
            android:text="购物车" />
        <Button
            android:id="@+id/button_addToShoppingCar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ff0000"
            android:layout_weight="1"
            android:text="加入购物车" />
        
    </LinearLayout>

</RelativeLayout>