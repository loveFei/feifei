<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/linearLayout_userMessage"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView_user"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/addimage" />

        <LinearLayout
            android:id="@+id/linearLayout_userMessage2"
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="WELCOME"
                android:textColor="#ff0000"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/textView_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="用户名"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/textView_user_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="10dp"
                android:text="用户详情"
                android:textSize="16sp"
                android:textColor="#ffff00"  />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/button_order"
        android:layout_width="140dp"
        android:layout_height="35dp"
        android:layout_below="@+id/linearLayout_userMessage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="我的订单"
        android:background="#008080" />
    <Button
        android:id="@+id/button_set"
        android:layout_width="140dp"
        android:layout_height="35dp"
        android:layout_below="@+id/button_order"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="设置"
        android:background="#008080" />
    <Button
        android:id="@+id/button_merchant"
        android:layout_width="140dp"
        android:layout_height="35dp"
        android:layout_below="@+id/button_set"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="成为商家"
        android:background="#008080"/>

</RelativeLayout>